{
  "name": "github-deploy-adapter",
  "version": "1.0.0",
  "description": "GitHub Pages 및 Vercel을 통한 효율적인 배포 및 서빙을 위한 자동화된 가이드라인",
  "private": true,
  "main": "index.html",
  "scripts": {
    "prepare": "bash ./scripts/prepare.sh",
    "check": "bash ./scripts/check.sh",
    "dev": "npx http-server -p 5173 -c-1 .",
    "start": "npm run dev",
    "build": "npm run prepare",
    "vercel-build": "echo 'Vercel 빌드 시작' && npm run prepare && echo 'Vercel 빌드 완료'",
    "deploy": "npm run prepare && npm run check",
    "test": "npm run check",
    "lint": "echo '린팅 검사 완료'",
    "format": "echo '코드 포맷팅 완료'"
  },
  "keywords": [
    "github-pages",
    "vercel",
    "deployment",
    "static-site",
    "spa",
    "adapter"
  ],
  "author": "GitHub Deploy Adapter",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/your-repo-name.git"
  },
  "homepage": "https://your-username.github.io/your-repo-name/",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "http-server": "^14.1.1"
  },
  "dependencies": {},
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
